@import'/pages/component/bossList/index.wxss';

.applicant-inedex {
  padding: 0 28rpx;
}

.head-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 24rpx 32rpx
}

.select-message {
  display: flex;
  align-items: center;
  height: 44rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #706C7F;
}

.select-message.on {
  position: relative;
  font-size: 34rpx;
  color: #5482FB;
}

.select-message.on::after {
  position: absolute;
  content: '';
  bottom: -50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 40rpx;
  height: 0px;
  border: 4rpx solid #5482FB;
  border-radius: 4rpx;
}

.content-body-box {
  margin-top: 46rpx;
}