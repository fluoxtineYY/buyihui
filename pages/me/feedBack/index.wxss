.feedback-index {
  position: relative;
  padding: 0 28rpx;
  background: rgba(247, 248, 254);
}

.feed-type {
  display: flex;
  flex-direction: column;
  min-height: 292rpx;
  padding: 40rpx 32rpx;
  background: rgba(255, 255, 255);
  box-shadow: 0px 0px 12px rgba(164, 164, 164, 0.16);
  border-radius: 12rpx;
  box-sizing: border-box;
}

.feed-type:first-child {
  margin-top: 40rpx;
}

.feed-type+.feed-type {
  margin-top: 24rpx;
}

.title {
  height: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #414141;
}

.type-box {
  display: flex;
  flex-wrap: wrap;
  margin-top: 40rpx;
}

.type-list {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 24rpx 26rpx 0;
  min-width: 140rpx;
  height: 60rpx;
  font-size: 24rpx;
  color: #706C7F;
  border: 2rpx solid #F7F7F9;
  border-radius: 8rpx;
}

/* .type-list:nth-child(4n) {
margin:0
} */

.input-type {
  margin-top: 20rpx;
  height: 34rpx;
  font-size: 24rpx;
  line-height: 44rpx;
}

.phone {
  min-height: 194rpx;
}

.input-style {
  color: rgba(60, 60, 67, 0.7);
}

.footer {
  position: fixed;
  display: flex;
  align-items: center;
  bottom: 0;
  height: 120rpx;
  font-size: 32rpx;
}

.click-back {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 376rpx;
  height: 120rpx;
  color: #414141;
  background: rgba(255, 255, 255);
  box-shadow: 0px 0px 12rpx rgba(128, 128, 128, 0.1);
}

.sumit {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 374rpx;
  height: 120rpx;
  color: #FFFFFF;
  background: rgba(84, 130, 251);
  box-shadow: 0px 0px 12px rgba(128, 128, 128, 0.1);
}