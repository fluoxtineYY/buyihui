.content-head-box {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 376rpx;
  width: 100%;
  padding: 0 28rpx;
}

.content-head {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 40rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #f79f65;
}

.content-head::before,
.content-head::after {
  position: absolute;
  content: "";
  right: 100%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 24rpx;
  height: 0rpx;
  border: 2rpx solid #f79f65;
}

.content-head::after {
  left: 110%;
}

.content-body-box {
  position: absolute;
  top: 440rpx;
  padding: 0 28rpx;
  min-width: 694rpx;
}

.content-body,.base-body  {
  background: rgba(255, 255, 255);
}

