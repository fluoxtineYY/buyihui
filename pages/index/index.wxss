.select-role {
  padding: 30rpx;
}

.role-header {
  margin: 20rpx 0 25rpx 0;
}

.role-header image {
  width: 100%;
}

.role-content {
  display: flex;
  flex-wrap: wrap;
}

.many-role {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 40rpx 30rpx 0;
  width: 274rpx;
  height: 280rpx;
  background: rgba(255, 255, 255, 0.39);
  box-shadow: 0px 0px 12rpx rgba(138, 165, 255, 0.2);
  border-radius: 20rpx;
}

.many-role image {
  width: 96rpx;
}

.role-name {
  margin-top: 44rpx;
  height: 44rpx;
  font-size: 32rpx;
  line-height: 44rpx;
  color: #333333;
}