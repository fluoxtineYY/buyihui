.navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: rgb(221, 221, 221);
  z-index: 999;
}

.color1{
  background-color: #FFFFFF;
}

.color2{
  background-color: #3F6FED;
}

.title-bar {
  position: relative;
  color:#ffffff
}

.bar-address {
  display: flex;
  align-items: center;
  position: absolute;
  left: 0;
  top: 0;
  padding-left: 20px;
  width: 100%;
  height: 44px;
  font-size: 16px;
  line-height: 44px;
  color: #FFFFFF;
  box-sizing: border-box;
}

.bar-address image {
  margin-right: 5px;
  width: 20px;
}

.bar-back {
  position: absolute;
  left: 20px;
  top: 50%;
  transform: translateY(-50%);
  z-index: 999;
}

.bar-back image {
  width: 14px;
}

.tar-title {
  /* display: flex;
